<div class="row d-flex justify-content-between">
    <div class="col-5 today-list">
        <h1>Today</h1>
        <textarea class="form-control" placeholder ="Add your current to-do here!!!" id="doozieInput" rows="3"></textarea>
        <br>
                <div class="text-center">
            <button class="btn btn-outline-info bg-blue btn-lg text-center" onclick=test({{{doozie}}})>Add To-do!</button>
        </div>
        <br>
        <ol>
            {{#each doozie}}

            <li>{{this.title}}</li>
            <li>{{this.description}}</li>
            
           {{/each}}
        </ol>
    </div>

    <div class="col-5 future-list">
        <h1>Eventually</h1>
        <textarea class="form-control" placeholder="Add your future to-do here!!!" id="doozieInput" rows="3"></textarea>
        <br>
        <ol>
            <li>Colonoscopy</li>
            <li>Oil Change</li>
        </ol>
    </div>
    <div class="col-2"></div>
</div>
